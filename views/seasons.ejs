<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>NBA Quiz Game - seasons</title>
  <link rel="stylesheet" href="/reset.css" />
  <link rel="stylesheet" href="/LEBRON.css" />
</head>
<body>
  <%- include("partials/header") %>
  <main>
    <h2>Seasons</h2>
    <table>
      <thead>
        <tr>
          <th>Year</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% seasons.forEach(function(season) { %>
          <tr>
            <td><%= season.year %></td>
            <td><a href="/seasons/edit/<%= season.seasonID %>" class="button edit-button">Edit</a></td>
            <td>
              <form action="/seasons/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this season?');">
                <input type="hidden" name="seasonID" value="<%= season.seasonID %>" />
                <input type="submit" value="Delete" class="button delete-button" />
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    
    <!-- Add season Button -->
    <a href="/seasons/add" class="button add-button">Add season</a>

    <!-- Add season Form -->
    <form id="add-form" method="post" action="/seasons/add" style="display: none;">
      <h3>Add season</h3>
      <fieldset>
        <label for="add-year">Year:</label>
        <input type="text" id="add-year" name="year" required />
      </fieldset>
      <input type="submit" value="Add season" />
      <a href="/seasons" class="button cancel-button">Cancel</a>
    </form>
    
    <!-- Edit season Form -->
    <form id="edit-form" method="post" action="/seasons/update" style="display: none;">
      <h3>Edit season</h3>
      <fieldset>
        <label for="edit-id">season ID:</label>
        <input type="number" id="edit-id" name="seasonID" required />
      </fieldset>
      <input type="submit" value="Update season" />
      <a href="/seasons" class="button cancel-button">Cancel</a>
    </form>
  </main>
</body>
</html>