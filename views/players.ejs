<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>NBA Quiz Game - Players</title>
  <link rel="stylesheet" href="/reset.css" />
  <link rel="stylesheet" href="/LEBRON.css" />
  <script src="/form_controls.js" defer></script>
  <script src="/players.js" defer></script>
</head>
<body>
  <header>
    <h1><a href="./">LEBRON - The NBA Player Guessing Game üèÄ</a></h1>
    <nav>
      <ul>
        <li><a href="/players">Browse Players</a></li>
        <li><a href="/conferences">Browse Conferences</a></li>
        <li><a href="/teams">Browse Teams</a></li>
        <li><a href="/positions">Browse Positions</a></li>
        <li><a href="/seasons">Browse Seasons</a></li>
        <li><a href="/season_team_players">Browse Season Players</a></li>
        <li><a href="/player_positions">Browse Player Positions</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <h2>Players</h2>
    <form action="/players/search" method="GET">
      <input name="name" type="text" placeholder="Search by Name" />
      <input name="age" type="number" step="1" min="18" max="100" placeholder="Age" />
      <select name="team_id">
        <option value="">Select Team</option>
        <% teams.forEach(function(team) { %>
          <option value="<%= team.teamID %>"><%= team.name %></option>
        <% }); %>
      </select>
      <select name="position_id">
        <option value="">Select Position</option>
        <% positions.forEach(function(position) { %>
          <option value="<%= position.positionID %>"><%= position.name %></option>
        <% }); %>
      </select>
      <select name="conference_id">
        <option value="">Select Conference</option>
        <% conferences.forEach(function(conference) { %>
          <option value="<%= conference.conferenceID %>"><%= conference.name %></option>
        <% }); %>
      </select>
      <input type="submit" value="Search" />
    </form>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Age</th>
          <th>Jersey Number</th>
          <th>Position</th>
          <th>Team(s)</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% players.forEach(function(player) { %>
          <tr>
            <td><%= player.name %></td>
            <td><%= player.age %></td>
            <td><%= player.jerseyNumber %></td>
            <td><%= player.position %></td>
            <td><%= player.teams %></td>
            <td><a href="/players/edit/<%= player.playerID %>" class="button edit-button">Edit</a></td>
            <td>
              <form action="/players/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this player?');">
                <input type="hidden" name="playerID" value="<%= player.playerID %>" />
                <input type="submit" value="Delete" class="button delete-button" />
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    
    <!-- Add Player Button -->
    <a href="/players/add" class="button add-button">Add Player</a>

    <!-- Add Player Form -->
    <form id="add-form" method="post" action="/players/add" style="display: none;">
      <h3>Add Player</h3>
      <fieldset>
        <label for="add-name">Name:</label>
        <input type="text" id="add-name" name="name" required />
      </fieldset>
      <fieldset>
        <label for="add-age">Age:</label>
        <input type="number" id="add-age" name="age" min="18" max="100" required />
      </fieldset>
      <fieldset>
        <label for="add-jerseyNumber">Jersey Number:</label>
        <input type="number" id="add-jerseyNumber" name="jerseyNumber" required />
      </fieldset>
      <input type="submit" value="Add Player" />
      <a href="/players" class="button cancel-button">Cancel</a>
    </form>
    
    <!-- Edit Player Form -->
    <form id="edit-form" method="post" action="/players/update" style="display: none;">
      <h3>Edit Player</h3>
      <fieldset>
        <label for="edit-id">Player ID:</label>
        <input type="number" id="edit-id" name="playerID" required />
      </fieldset>
      <fieldset>
        <label for="edit-name">Name:</label>
        <input type="text" id="edit-name" name="name" />
      </fieldset>
      <fieldset>
        <label for="edit-age">Age:</label>
        <input type="number" id="edit-age" name="age" min="18" max="100" />
      </fieldset>
      <fieldset>
        <label for="edit-jerseyNumber">Jersey Number:</label>
        <input type="number" id="edit-jerseyNumber" name="jerseyNumber" />
      </fieldset>
      <input type="submit" value="Update Player" />
      <a href="/players" class="button cancel-button">Cancel</a>
    </form>
  </main>
</body>
</html>