<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NBA Quiz Game - Players</title>
    <link rel="stylesheet" href="/reset.css" />
    <link rel="stylesheet" href="/LEBRON.css" />
  </head>
  <body>
    <%- include("partials/header") %>
    <main>
      <h2>Season Players</h2>
      <table>
        <thead>
          <tr>
            <th>Season</th>
            <th>Team</th>
            <th>Player</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% season_players.forEach(function(season_player) { %>
          <tr>
            <td><%= season_player.year %></td>
            <td><%= season_player.team_name %></td>
            <td><%= season_player.player_name %></td>
            <td>
              <a
                href="/season_players/edit/<%= season_player.seasonTeamPlayerID %>"
                class="button edit-button"
                >Edit</a
              >
            </td>
            <td>
              <form
                action="/season_players/delete"
                method="POST"
                onsubmit="return confirm('Are you sure you want to delete this player from the season?');"
              >
                <input
                  type="hidden"
                  name="playerID"
                  value="<%= season_player.seasonTeamPlayerID %>"
                />
                <input
                  type="submit"
                  value="Delete"
                  class="button delete-button"
                />
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>

      <!-- Add Player Button -->
      <a href="/season_players/add" class="button add-button">Add Player</a>
    </main>
  </body>
</html>
