<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add New Player</title>
  <link rel="stylesheet" href="/reset.css" />
  <link rel="stylesheet" href="/LEBRON.css" />
</head>
<body>
  <%- include("partials/header") %>
  <main>
    <h2>Add New Player</h2>
    <form method="POST" action="/players/add">
      <fieldset>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required />
      </fieldset>
      <fieldset>
        <label for="age">Age:</label>
        <input type="number" id="age" name="age" min="18" max="100" required />
      </fieldset>
      <fieldset>
        <label for="jerseyNumber">Jersey Number:</label>
        <input type="number" id="jerseyNumber" name="jerseyNumber" required />
      </fieldset>
      <fieldset>
        <label for="teamID">Team:</label>
        <select id="teamID" name="teamID" required>
          <% teams.forEach(function(team) { %>
            <option value="<%= team.teamID %>"><%= team.name %></option>
          <% }); %>
        </select>
      </fieldset>
      <fieldset>
        <label for="seasonID">Season:</label>
        <select id="seasonID" name="seasonID" required>
          <% seasons.forEach(function(season) { %>
            <option value="<%= season.seasonID %>"><%= season.year %></option>
          <% }); %>
        </select>
      </fieldset>
      <fieldset>
        <label for="positionID">Position:</label>
        <select id="positionID" name="positionID" required>
          <% positions.forEach(function(position) { %>
            <option value="<%= position.positionID %>"><%= position.name %></option>
          <% }); %>
        </select>
      </fieldset>
      <input type="submit" value="Add Player" />
      <a href="/players" class="button cancel-button">Cancel</a>
    </form>
  </main>
</body>
</html>
