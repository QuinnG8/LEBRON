<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add Player</title>
  <link rel="stylesheet" href="/reset.css" />
  <link rel="stylesheet" href="/LEBRON.css" />
</head>
<body>
  <%- include("partials/header") %>
  <main>
    <h2>Add Player</h2>
    <form method="post" action="/players/add">
      <fieldset>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required />
      </fieldset>
      <fieldset>
        <label for="age">Age:</label>
        <input type="number" id="age" name="age" min="18" max="100" required />
      </fieldset>
      <fieldset>
        <label for="jerseyNumber">Jersey Number:</label>
        <input type="number" id="jerseyNumber" name="jerseyNumber" required />
      </fieldset>
      <fieldset>
        <label for="team">Team:</label>
        <select id="team" name="teamID" required>
          <option value="">Select Team</option>
          <% teams.forEach(function(team) { %>
            <option value="<%= team.teamID %>"><%= team.name %></option>
          <% }); %>
        </select>
      </fieldset>
      <fieldset>
        <label for="position">Position:</label>
        <select id="position" name="positionID" required>
          <option value="">Select Position</option>
          <% positions.forEach(function(position) { %>
            <option value="<%= position.positionID %>"><%= position.name %></option>
          <% }); %>
        </select>
      </fieldset>
      <input type="submit" value="Add Player" />
    </form>
  </main>
</body>
</html>